{
  "name": "@loform/react",
  "version": "4.0.2",
  "description": "loform is light, easy to use and extendable form validation library written in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "typescript",
    "javascript",
    "form",
    "validation",
    "form validation",
    "light"
  ],
  "scripts": {
    "stats": "NODE_ENV=production webpack --bail --config webpack.config.js --json > stats.json",
    "build": "rm -rf ./dist && NODE_ENV=production webpack --bail --config webpack.config.js --progress -p",
    "build:dev": "rm -rf ./dist && webpack --bail --config webpack.config.js --progress",
    "lint": "tslint --project tsconfig.json --exclude 'src/translations/*' 'src/**/*.ts?(x)'",
    "lint:fix": "tslint --project tsconfig.json --fix --exclude 'src/translations/*'  'src/**/*.ts?(x)'",
    "test": "jest ./src --coverage",
    "test:watch": "jest ./src --watch",
    "test:watch:coverage": "jest ./src --watch --coverage",
    "test:functional": "jest ./test/functional",
    "release": "standard-version",
    "storybook": "start-storybook -p 6006",
    "build:storybook": "build-storybook -o .out",
    "prerelease": "npm run build && npm run test:functional",
    "prepublishOnly": "npm run build && npm run test:functional",
    "deploy-storybook": "npm run build:storybook && storybook-to-ghpages --existing-output-dir=.out"
  },
  "author": "Amadeusz Winogrodzki <amadeusz.winogrodzki@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/awinogrodzki/loform.git"
  },
  "license": "MIT",
  "dependencies": {
    "debounce": "^1.2.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-dom": "^16.3.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.8",
    "@storybook/react": "^3.4.8",
    "@storybook/storybook-deployer": "^2.3.0",
    "@types/classnames": "^2.2.2",
    "@types/debounce": "^1.0.0",
    "@types/enzyme": "^3.1.4",
    "@types/jest": "^21.1.1",
    "@types/node": "^9.4.7",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.18",
    "@types/react-dom": "^16.0.6",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.3",
    "@types/uuid": "^3.4.3",
    "classnames": "^2.2.6",
    "css-loader": "^0.28.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "npm:enzyme-react-adapter-future",
    "jest": "^22.4.0",
    "jest-cli": "^22.4.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.6",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.0.0",
    "source-map-loader": "^0.2.1",
    "standard-version": "^4.2.0",
    "storybook-readme": "^3.3.0",
    "style-loader": "^0.19.0",
    "ts-jest": "^23.1.2",
    "ts-loader": "3.5.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "engines": {
    "node": ">=8.1.0",
    "npm": ">=5.2.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "modulePaths": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/mocks/fileMock.ts",
      "\\.css$": "identity-obj-proxy"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "setupFiles": [
      "<rootDir>/test/setup.ts"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testURL": "http://localhost"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "storybook-deployer": {
    "gitUsername": "awinogrodzki",
    "gitEmail": "amadeusz.winogrodzki@gmail.com",
    "commitMessage": "Deploy Storybook"
  }
}
