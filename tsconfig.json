{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./",
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*",
    "./src/**/*.test.tsx",
    "./src/**/*.test.ts"
  ]
}
